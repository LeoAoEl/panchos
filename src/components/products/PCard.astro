---
const { product } = Astro.props;
import { Image } from "astro:assets";
---

<a href={`/products/${product.slug}`} class="group">
  <article
    class="bg-cardBgLight dark:bg-cardBgDark transition-all rounded-lg overflow-hidden shadow-lg duration-300 hover:shadow-xl hover:-translate-y-1"
  >
    <div class="aspect-square overflow-hidden">
      <Image
        src={product.data.image}
        alt={product.data.title}
        loading={"lazy"}
        class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
      />
    </div>
    <div class="p-6">
      <h2
        class="text-xl font-semibold mb-2"
        transition:name={product.data.title}
      >
        {product.data.title}
      </h2>
    </div>
  </article>
</a>
