---
interface Props {
  title: string;
  image: string;
  description: string;
}
const { title, image, description } = Astro.props;
---

<a
  class="bg-cardBgLight dark:bg-cardBgDark rounded-lg shadow-lg overflow-hidden transform transition-all duration-300 hover:scale-105"
  href="#"
>
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-4">
    <h3 class="text-xl font-semibold text-[--color-secondary]">{title}</h3>
    <p class="text-[--color-whiteBg] text-sm mt-2">{description}</p>
  </div>
</a>
