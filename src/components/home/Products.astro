---
import { Image } from "astro:assets";
import Title from "@components/shared/Title.astro";

import one from "@assets/images/coffe/default.avif";
import two from "@assets/images/coffe/white.avif";
import middle from "@assets/images/inONe.webp";

const products = [
  {
    image: one,
    title: "Café camino viejo",
    body: "Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempora, eius.",
  },
  {
    image: middle,
    title: "Café",
    body: "Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempora, eius.",
  },
  {
    image: two,
    title: "Café camino blanco",
    body: "Lorem ipsum dolor sit amet consectetur adipisicing elit. Tempora, eius.",
  },
];
const image =
  "https://images.unsplash.com/photo-1506619216599-9d16d0903dfd?q=80&w=2069&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D";
---

<section class="py-16">
  <div class="items-center text-center mb-12">
    <Title> Conoce nuestros Productos </Title>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
    <!-- Product Card -->

    {
      products.map(({ title, body, image }) => (
        <a
          aria-label="Ir a productos"
          href="/products/"
          class="bg-cardBgLight dark:bg-cardBgDark rounded-2xl shadow-lg overflow-hidden transition-all ease-in hover:scale-105"
        >
          <Image src={image} alt={title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h3 class="text-xl font-bold mb-2">{title}</h3>
            <p class="mb-4 dark:text-slate-300">{body}</p>
          </div>
        </a>
      ))
    }
  </div>
</section>
