---
import { Image } from "astro:assets";
import Title from "@components/shared/Title.astro";

import one from "@assets/images/1.avif";
import two from "@assets/images/2.avif";
import tres from "@assets/images/3.avif";

const images = [one, two, tres];
---

<div class="py-16">
  <div class="mb-12 items-center justify-center flex">
    <Title>Siguenos en nuestras redes sociales</Title>
  </div>
  <div class="grid md:grid-cols-3 gap-6 lg:gap-8">
    {/* Columna Instagram */}
    <div class="md:col-span-2 space-y-6">
      <div class="grid grid-cols-3 gap-4">
        {/* Posts de Instagram (placeholders) */}
        {
          images.map((img) => (
            <div class="aspect-square bg-gray-100 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
              <Image
                src={img}
                alt="Publicación de Instagram"
                class="w-full h-full object-cover"
                width="400"
                height="400"
              />
            </div>
          ))
        }
      </div>
      <a
        href="https://www.instagram.com/cafe.escondido/"
        target="_blank"
        class="inline-block w-full py-3 px-6 bg-gradient-to-r from-pink-500 to-orange-500 text-white rounded-lg font-semibold hover:opacity-90 transition-opacity text-center"
      >
        Síguenos en Instagram
      </a>
    </div>

    {/* Columna Redes Sociales */}
    <div class="space-y-6 flex flex-col items-center justify-center">
      {/* Bloque Facebook */}
      <div class="flex flex-col items-center space-y-3">
        <a
          href="https://www.facebook.com/cafecaminoviejo"
          target="_blank"
          class="flex flex-col items-center justify-center gap-2 p-6 bg-cardBgLight dark:bg-cardBgDark rounded-xl shadow-lg hover:shadow-xl transition-all w-full"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"
            ></path>
          </svg>
          <span class="text-lg font-semibold">Síguenos en Facebook</span>
        </a>
      </div>

      {/* Bloque WhatsApp */}
      <div class="flex flex-col items-center space-y-3">
        <a
          href="https://wa.me/tunumero"
          target="_blank"
          class="flex flex-col items-center justify-center gap-2 p-6 bg-cardBgLight dark:bg-cardBgDark rounded-xl shadow-lg hover:shadow-xl transition-all w-full"
        >
          <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24">
            <path
              d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"
            ></path>
          </svg>
          <span class="text-lg font-semibold">Escríbenos por WhatsApp</span>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  /* Optimización para imágenes */
  img {
    will-change: transform;
  }
</style>
